#kivy 2.1
<PyramidWindow>
    size_hint: 1, 1
    canvas:
        Color:
            rgb: 0.08, 0.06, 0.15
        Rectangle:
            pos: self.pos
            size: self.size
    anchor_x: 'center'
    anchor_y: 'center'
    AnchorLayout:
        size_hint: 1, 1
        anchor_x: 'left'
        anchor_y: 'top'
        HelpButton:
    ParadigmaticSystemGrid:
        id: grid


<HelpButton>
    size_hint: None, None
    size: 70, 40
    text: 'Help'
    color: 0, 0, 0
    background_color: 2.0, 1.0, 0.8


<HelpWindow>
    size_hint: 1, 1
    halign: 'center'
    color: 0.8, 0.8, 0.8
    text: self.text
    markup: True
    canvas.before:
        Color:
            rgb: 0.32, 0.12, 0.12
        Rectangle:
            size: self.size
            pos: self.pos


<ParadigmaticSystemGrid>
    size_hint: None, 0.8
    width: self.height
    cols: self.cols
    rows: self.rows
    padding: 20
    spacing: 10, 10
    canvas.before:
        Color:
            rgb: 0.08, 0, 0.1
        Rectangle:
            pos: self.pos
            size: self.size


<ParadigmaticSystemText>
    size_hint_y: None
    height: 40
    color: 0, 0, 0
    font_size: 20
    multiline: False
    halign: 'center'


<ParadigmaticSystemCell>
    background_normal: ''
    color: 1.0, 1.0, 1.0
    font_size: 20
    text: self.text


<CellEditText>
    size_hint_y: 0.6
    cursor_color: 0, 0, 0
    color: 0, 0, 0
    font_size: 20
    multiline: False
    halign: 'center'


<CurrentCellFrame>
    size_hint: 1, 1
    canvas.before:
        Color:
            rgb: 0.8, 0.95, 0.0
        Line:
            width: 2
            points: self.x, self.y, self.x + self.width, self.y, self.x + self.width, self.y + self.height, self.x, self.y + self.height, self.x, self.y


<WarningLabel>
    size_hint: None, None
    width: len(self.text) * 10
    height: 75
    font_size: 20
    background_color: 0.85, 0.25, 0.18, 1
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgb: 0, 0, 0
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
