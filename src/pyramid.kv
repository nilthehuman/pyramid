#kivy 2.1
<PyramidWindow>
    size_hint: 1, 1
    canvas:
        Color:
            rgb: 0.08, 0.06, 0.15
        Rectangle:
            pos: self.pos
            size: self.size
    anchor_x: 'center'
    anchor_y: 'center'
    AnchorLayout:
        size_hint: 1, 1
        anchor_x: 'left'
        anchor_y: 'top'
        HelpButton:
    ParadigmGrid:
        id: grid


<HelpButton>
    size_hint: None, None
    size: 70, 40
    text: 'Help'
    color: 0, 0, 0
    background_color: 2.0, 1.0, 0.8


<HelpWindow>
    size_hint: 1, 1
    background_color: 0.4, 0.2, 0.1
    text: 'TODO: help text goes here...'
    canvas.before:
        Color:
            rgb: 0.24, 0.12, 0.48
        Rectangle:
            size: self.size
            pos: self.pos


<ParadigmGrid>
    size_hint: None, 0.8
    width: self.height
    cols: 5
    rows: 5
    padding: 20
    spacing: 10, 10
    canvas.before:
        Color:
            rgb: 0.08, 0, 0.1
        Rectangle:
            pos: self.pos
            size: self.size


<ParadigmText>
    size_hint_y: None
    height: 40
    color: 0, 0, 0
    halign: 'center'


<ParadigmCell>
    background_color: 0.8, 1.0, 0.2
