#kivy 2.1
<PyramidWindow>
    size_hint: 1, 1
    canvas:
        Color:
            rgb: 0.08, 0.06, 0.15
        Rectangle:
            pos: self.pos
            size: self.size
    anchor_x: 'center'
    anchor_y: 'center'
    ParadigmPanel:
        id: panel


<ParadigmPanel>
    size_hint: None, 0.8
    width: 1.1 * self.height
    anchor_x: 'right'
    anchor_y: 'bottom'
    padding: 40, 40, 0, 0
    canvas:
        Color:
            rgb: 0.08, 0, 0.1
        Rectangle:
            pos: self.pos
            size: self.size
    ParadigmGrid:
        id: grid


<ParadigmGrid>
    size_hint: None, 1
    width: self.height
    cols: 4
    rows: 4
    padding: 20
    spacing: 10, 10


<ParadigmCell>
    background_color: 0.8, 1.0, 0.2
